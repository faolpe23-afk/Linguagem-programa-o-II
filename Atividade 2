

import java.util.ArrayList;

public class ListaFesta {
	
	private static ListaFesta instancia;
	
	ArrayList<Pessoa> lista;
	
	private ListaFesta() {
		
		lista = new ArrayList<Pessoa>();
		lista.add(new Pessoa("Luiz"));
		lista.add(new Pessoa("Jose"));
		lista.add(new Pessoa("Maria"));
		lista.add(new Pessoa("Joao"));
	}
	
	public static ListaFesta getInstancia() {
		if (instance == null) instance = new ListaFesta();
		if (instancia == null) {
            instancia = new ListaFesta();
        }
        return instancia;
	}
	
	public void show() {
		System.out.println("LISTA DE FESTA");
		for(int i = 0; i < lista.size(); i++) {			
			System.out.println(lista.get(i).getNome()); 
		}
	}
}


import java.util.ArrayList;

public class ListaFesta {
	
	private static ListaFesta instancia;
	
	ArrayList<Pessoa> lista;
	
	private ListaFesta() {
		
		lista = new ArrayList<Pessoa>();
		lista.add(new Pessoa("Luiz"));
		lista.add(new Pessoa("Jose"));
		lista.add(new Pessoa("Maria"));
		lista.add(new Pessoa("Joao"));
	}
	
	public static ListaFesta getInstancia() {
		 if (instance == null) instance = new ListaFesta();
		if (instancia == null) {
            instancia = new ListaFesta();
        }
        return instancia;
	}
	
	public void show() {
		System.out.println("LISTA DE FESTA");
		for(int i = 0; i < lista.size(); i++) {			
			System.out.println(lista.get(i).getNome()); 
		}
	}
}

public class Main {
	public static void main(String[] args) {		
		ListaFesta l1 = ListaFesta.getInstancia();
		l1.show();
	}
}
